{
    "name": "symplely/uv-ffi",
    "description": " Foreign Function Interface (FFI) of `libuv` cross-platform event-driven asynchronous I/O library.",
    "keywords": [
        "ffi",
        "ext-uv",
        "event-driven",
        "event-loop",
        "uvLoop",
        "uv-ffi",
        "parallel",
        "threads",
        "uv_spawn",
        "libuv",
        "async",
        "cross-platform",
        "asynchronous"
    ],
    "homepage": "https://github.com/symplely/uv-ffi",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Lawrence Stubbs",
            "email": "lstubbs@techno.express"
        }
    ],
    "require": {
        "php": ">7.4",
        "ext-ffi": "*",
        "symplely/zend-ffi": "~0.11.2"
    },
    "autoload": {
        "files": [
            "preload.php",
            "src/UVFunctions.php"
        ],
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },
    "conflict": {
        "ext-uv": "*"
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests",
        "post-create-project-cmd": [
            "php .ignore_autoload.php",
            "composer update -d ../.."
        ]
    }
}
